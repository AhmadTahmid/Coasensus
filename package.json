{
  "name": "coasensus",
  "private": true,
  "version": "0.1.0",
  "description": "Coasensus monorepo",
  "workspaces": [
    "apps/*",
    "services/*",
    "packages/*"
  ],
  "scripts": {
    "check": "npm run typecheck && npm run lint && npm run test",
    "build": "npm run --workspaces --if-present build",
    "lint": "npm run --workspaces --if-present lint",
    "test": "npm run --workspaces --if-present test",
    "typecheck": "npm run --workspaces --if-present typecheck",
    "dev:web": "npm run --workspace @coasensus/web dev",
    "dev:ingest": "npm run --workspace @coasensus/ingest-worker dev",
    "dev:filter": "npm run --workspace @coasensus/filter-engine dev",
    "smoke:ingest": "npm run --workspace @coasensus/ingest-worker smoke",
    "dev:feed-api": "npm run --workspace @coasensus/ingest-worker api",
    "monitor:prod": "node scripts/monitor-production.mjs"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@types/node": "^22.13.10",
    "eslint": "^9.22.0",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.26.0",
    "vitest": "^3.0.8"
  }
}
